---
import EmergencyAlertLogTable from "@/components/dashboard/EmergencyAlertLogTable";
import Header from "@/components/Header.astro";
import Navbar from "@/components/Navbar.astro";
import HomeLayout from "@/layouts/HomeLayout.astro";
---

<HomeLayout>
  <div class="crancy-body-area">
    <!-- crancy Admin Menu -->
    <div class="crancy-smenu" id="CrancyMenu">
      <!-- Admin Menu -->
      <Navbar />
      <!-- End Admin Menu -->
    </div>
    <!-- End crancy Admin Menu -->

    <!-- Start Header -->
    <Header />
    <!-- End Header -->

    <!-- crancy Dashboard -->
    <section class="crancy-adashboard crancy-show">
      <main>
        <h2 class="crancy-section__title">Emergency Alert Log</h2>
        <p class="crancy-section__text">
          View and filter all emergency alerts within your firm.
        </p>

        {/* The Emergency Alert Log Table */}
        <div class="row crancy-gap-30">
          {/* Wrap in row for layout consistency */}
          <div class="col-12">
            {/* Full width column */}
            <EmergencyAlertLogTable client:load />
            {/* client:load is essential */}
          </div>
        </div>
      </main>
    </section>
    <!-- End crancy Dashboard -->
  </div>
</HomeLayout>
